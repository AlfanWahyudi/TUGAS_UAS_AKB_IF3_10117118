<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wisata.DetailWisata">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detailgambarwisata"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/detail_nama_wisata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nama_wisata"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
                <TextView
                    android:id="@+id/detail_kategori"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kategori"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textSecondary"/>
                <TextView
                    android:id="@+id/detail_alamat"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/alamat_wisata"
                    android:textColor="@color/textPrimary"
                    android:textSize="10sp"
                  />
            </LinearLayout>
            <ImageButton
                android:id="@+id/buttonMaps"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_keterangan"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:text="keterangan disini" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>